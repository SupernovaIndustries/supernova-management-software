APP_NAME="Supernova Management"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=supernova
DB_USERNAME=supernova
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Session
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@supernova.test"
MAIL_FROM_NAME="${APP_NAME}"

# Search Configuration
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=masterKey

# File System Configuration - MODULAR PATHS
# Development Windows
SYNCTHING_ROOT_PATH=G:\Supernova
# Production Linux VPS
# SYNCTHING_ROOT_PATH=/opt/supernova-data

# Syncthing Paths (relative to SYNCTHING_ROOT_PATH)
SYNCTHING_CLIENTS_PATH=${SYNCTHING_ROOT_PATH}/Clienti
SYNCTHING_DOCUMENTS_PATH="${SYNCTHING_ROOT_PATH}/Documenti SRL"
SYNCTHING_WAREHOUSE_PATH=${SYNCTHING_ROOT_PATH}/Magazzino
SYNCTHING_TEMPLATES_PATH="${SYNCTHING_ROOT_PATH}/Modelli Documenti"
SYNCTHING_PROTOTYPES_PATH=${SYNCTHING_ROOT_PATH}/Prototipi
SYNCTHING_DEEPSOUTH_PATH=${SYNCTHING_ROOT_PATH}/DeepSouth
SYNCTHING_FINANCE_PATH=${SYNCTHING_ROOT_PATH}/Finanze
SYNCTHING_LOGOS_PATH=${SYNCTHING_ROOT_PATH}/Loghi
SYNCTHING_MARKETING_PATH=${SYNCTHING_ROOT_PATH}/Marketing
SYNCTHING_PARTNERSHIP_PATH=${SYNCTHING_ROOT_PATH}/Partnership
SYNCTHING_PLANNING_PATH="${SYNCTHING_ROOT_PATH}/Pianificazione Futura"
SYNCTHING_PITCH_PATH=${SYNCTHING_ROOT_PATH}/Pitch
SYNCTHING_SHAREIT_PATH=${SYNCTHING_ROOT_PATH}/ShareIT!
SYNCTHING_SITE_PATH=${SYNCTHING_ROOT_PATH}/Sito

# Laravel Storage Disks Configuration
FILESYSTEM_DISK_CLIENTS=syncthing_clients
FILESYSTEM_DISK_DOCUMENTS=syncthing_documents
FILESYSTEM_DISK_WAREHOUSE=syncthing_warehouse
FILESYSTEM_DISK_TEMPLATES=syncthing_templates
FILESYSTEM_DISK_PROTOTYPES=syncthing_prototypes

# AI Configuration
AI_PROVIDER=ollama
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Anthropic Claude API (per analisi contratti)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096